<div class="row">
    @foreach(var item in Model) {
        <div class="col-4 mb-3 d-flex">
            <div class="card" style="width: 18rem;">
                <img src="~/images/@item.Img" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-title">Specialization: @item.Specialization</h6>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="/AddAppointment/index?doctorId=@item.Id" class="btn btn-primary">Book Appointment</a>
                </div>
            </div>
        </div>
    }
</div>
